<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 borderVisible="false" backgroundAlpha="0" dropShadowVisible="false">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import com.lnet.streamingvideo.events.ApplicationEvent;
			import com.lnet.streamingvideo.events.ApplicationEventBus;
			import com.lnet.streamingvideo.viewmodels.BrowseViewModel;
			
			private var _browseViewModel:BrowseViewModel;
			
			private function loadVideoContent():void {
				ApplicationEventBus.getInstance().dispatchEvent(new ApplicationEvent(ApplicationEvent.VIDEO_SELECTED,
					videoList.selectedItem));
			}

			public function set browseViewModel(value:BrowseViewModel):void {
				_browseViewModel = value;
			}
			
			[Bindable]
			public function get browseViewModel():BrowseViewModel {
				return _browseViewModel;
			}
		]]>
	</fx:Script>
	<s:Label styleName="categoryLabel"
		visible="{searchViewModel.searchResultList.length > 0}"
		text="{'Search results for ' + searchViewModel.searchTerm}"/>
	<s:List id="videoList"
			dataProvider="{searchViewModel.searchResultList}"
			labelField="title"
			width="400"
			borderVisible="false"
			doubleClickEnabled="true"
			doubleClick="loadVideoContent()"
			contentBackgroundAlpha="0">
	</s:List>
</s:BorderContainer>
