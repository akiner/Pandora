<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   backgroundAlpha="0" borderVisible="false" width="100%">
	<fx:Script>
		<![CDATA[
			import com.lnet.streamingvideo.events.ApplicationEvent;
			import com.lnet.streamingvideo.events.ApplicationEventBus;
			import com.lnet.streamingvideo.viewmodels.BrowseViewModel;
			
			import nl.demonsters.debugger.MonsterDebugger;
			
			private var _browseViewModel:BrowseViewModel;
			
			[Bindable]
			public function get browseViewModel():BrowseViewModel {
				return _browseViewModel;
			}
			
			public function set browseViewModel(value:BrowseViewModel):void {
				_browseViewModel = value;
			}
			
			private function loadCategoryResults():void {
				MonsterDebugger.trace("BrowseTopView.loadCategoryResults","Load results for::"+standardFeedCategories.selectedItem.name
					+" & url::"+standardFeedCategories.selectedItem.url);
				browseViewModel.getBrowseResults(standardFeedCategories.selectedItem.name, standardFeedCategories.selectedItem.url);
			}

			private function keyHandler(event:KeyboardEvent):void {
//				MonsterDebugger.trace("StandardFeedsView::keyDownHandler","Key pressed::"+event.keyCode);
				ApplicationEventBus.getInstance().dispatchEvent(new ApplicationEvent(ApplicationEvent.KEY_PRESSED, event));
			}
		]]>
	</fx:Script>
	<s:List id="standardFeedCategories" keyDown="keyHandler(event)"
			dataProvider="{browseViewModel.standardFeedList}"
			labelField="name" width="100%" height="100%" styleName="standardFeedList" 
			borderVisible="false" click="loadCategoryResults()" textAlign="center">
	</s:List>
</s:BorderContainer>